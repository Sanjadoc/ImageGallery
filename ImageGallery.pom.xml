<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
         <groupId>com.iomull.imageGallery</groupId>
		<artifactId>ImageGallery-parent</artifactId>
        <relativePath>./pom.xml</relativePath>
        <version>1.08</version>
    </parent>

    <groupId>com.iomull.imageGallery</groupId>
    <artifactId>ImageGallery</artifactId>
    <packaging>swf</packaging>
    <name>${project.artifactId}</name>
    <description>${project.artifactId}-${project.version}</description>
	
	<properties>
        <flex.sdk.version>4.6.b.23201</flex.sdk.version>
        <!-- Point to standalone flashplayer -->
        <flex.flashPlayer.command>
			${basedir}/debugger/FlashPlayerDebugger12.exe
        </flex.flashPlayer.command>
		<skipTests>false</skipTests>
    </properties>

   <build>
        <sourceDirectory>${basedir}/src</sourceDirectory>
		<testSourceDirectory>${basedir}/src</testSourceDirectory>
        <plugins>
            <plugin>
                <groupId>org.sonatype.flexmojos</groupId>
                <artifactId>flexmojos-maven-plugin</artifactId>
                <version>4.2-beta</version>
                <extensions>true</extensions>
                <configuration>
					<staticLinkRuntimeSharedLibraries>true</staticLinkRuntimeSharedLibraries>
					<compilerWarnings>
						<warn-no-constructor>false</warn-no-constructor>
					</compilerWarnings>
					<aggregate>true</aggregate>
					<headlessServer>true</headlessServer>
					<verboseStacktraces>true</verboseStacktraces>
					<swfVersion>18</swfVersion>
					<targetPlayer>${playerglobal.version}</targetPlayer>
					<optimize>true</optimize>
					<dumpConfigAttach>true</dumpConfigAttach>	
                    <debug>false</debug>
                    <as3>true</as3>
                    <sourceFile>com/iomull/imageGallery/ImageGalleryApp.as</sourceFile>
					<frames>
                        <frame>
                            <label>imageGallery</label>
                            <classNames>
                                <className>com.iomull.imageGallery.ImageGalleryApp</className>
                            </classNames>
                        </frame>
                    </frames>
                    <defines>
                        <property>
                            <name>CONFIG::debug</name>
                            <value>false</value>
                        </property>
                        <property>
                            <name>CONFIG::localurls</name>
                            <value>false</value>
                        </property>
                    </defines>
					<coverage>true</coverage>
					<coverageProvider>cobertura</coverageProvider>
					<coverageReportFormat>
						<format>html</format>
						<format>xml</format>
					</coverageReportFormat>	
					
					
                </configuration>
				
				 <dependencies>
                    <dependency>
                        <groupId>com.adobe.flex</groupId>
                        <artifactId>compiler</artifactId>
                        <version>${flex.sdk.version}</version>
                        <type>pom</type>
                    </dependency>
                </dependencies>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>com.adobe.flex.framework</groupId>
            <artifactId>flex-framework</artifactId>
            <version>${flex.sdk.version}</version>
            <type>pom</type>
        </dependency>

        <dependency>
            <groupId>com.adobe.flexunit</groupId>
            <artifactId>flexunit</artifactId>
            <version>4.0-rc-1</version>
            <type>swc</type>
            <scope>test</scope>
        </dependency>
		
		<dependency>
             <groupId>com.iomull.imageGallery</groupId>
            <artifactId>signals</artifactId>
            <version>0.8</version>
            <type>swc</type>
        </dependency>
		
		<dependency>
             <groupId>com.iomull.imageGallery</groupId>
            <artifactId>signalsCommandMap</artifactId>
            <version>0.9</version>
            <type>swc</type>
        </dependency>
		
		<dependency>
             <groupId>com.iomull.imageGallery</groupId>
            <artifactId>robotlegs-framework</artifactId>
            <version>1.5.2</version>
            <type>swc</type>
        </dependency>
		
		<dependency>
            <groupId>com.iomull.imageGallery</groupId>
            <artifactId>greensock</artifactId>
            <version>11.0</version>
            <type>swc</type>
        </dependency>
		
		<dependency>
            <groupId>com.iomull.imageGallery</groupId>
            <artifactId>monsterDebugger</artifactId>
            <version>3.0</version>
            <type>swc</type>
        </dependency>
		
		<dependency>
            <groupId>com.iomull.imageGallery</groupId>
            <artifactId>monsterDebugger</artifactId>
            <version>3.0</version>
            <type>swc</type>
        </dependency>
		
		</dependencies>
		 <repositories>
			<repository>
				<id>flex-mojos-repository</id>
				<url>http://repository.sonatype.org/content/groups/flexgroup</url>
			</repository>
		</repositories>

		<pluginRepositories>
			<pluginRepository>
				<id>flex-mojos-plugin-repository</id>
				<url>http://repository.sonatype.org/content/groups/flexgroup</url>
			</pluginRepository>
		</pluginRepositories>
</project>
